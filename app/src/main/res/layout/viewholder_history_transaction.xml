<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/dimen_0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/tv_katering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/name_example"
            android:textColor="@color/title_color"
            android:textSize="@dimen/font_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_4dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/status_example"
            android:textColor="@color/description_color"
            android:textSize="@dimen/dimen_14dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_katering"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_katering" />

        <View
            android:id="@+id/line_review"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_margin="@dimen/dimen_4dp"
            android:background="@color/line_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_katering" />

        <ImageView
            android:id="@+id/ic_date"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:src="@drawable/ic_date_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/tv_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_date" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/date_example"
            app:layout_constraintLeft_toRightOf="@id/ic_date"
            app:layout_constraintTop_toBottomOf="@id/line_review" />

        <ImageView
            android:id="@+id/ic_money"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:src="@drawable/ic_money_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/tv_total"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_total" />

        <TextView
            android:id="@+id/tv_total"
            style="@style/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="@string/price_example"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ic_money"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_goneMarginLeft="@dimen/dimen_4dp"
            app:layout_goneMarginTop="@dimen/dimen_8dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>